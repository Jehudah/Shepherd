rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Feedback from the website â€” anyone can submit, nobody can read (admin only via console)
    match /feedback/{feedbackId} {
      allow create: if true;
      allow read, update, delete: if false;
    }


    // Helper function - check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function - check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      // Allow creating user document during registration (auth.uid must match userId)
      allow create: if isAuthenticated() && request.auth.uid == userId;
      // Only allow updating/deleting own user document
      allow update, delete: if isOwner(userId);
    }

    // User progress collection
    match /userProgress/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // Friends collection
    match /friends/{friendId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() &&
        (resource.data.userId == request.auth.uid || resource.data.friendId == request.auth.uid);
    }

    // Friend requests collection
    match /friendRequests/{requestId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() &&
        (resource.data.fromUserId == request.auth.uid || resource.data.toUserId == request.auth.uid);
    }

    // Prayer requests collection
    match /prayerRequests/{requestId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Prayer responses subcollection
      match /responses/{responseId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      }
    }

    // Study groups collection
    match /studyGroups/{groupId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
      // Allow owner to update any fields
      allow update: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
      // Allow any authenticated user to update memberCount and lastActivityAt (for join/leave)
      allow update: if isAuthenticated() &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['memberCount', 'lastActivityAt']);

      // Study group members subcollection
      match /members/{memberId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow delete: if isAuthenticated() &&
          (get(/databases/$(database)/documents/studyGroups/$(groupId)).data.ownerId == request.auth.uid ||
           resource.data.userId == request.auth.uid);
      }

      // Study group messages subcollection
      match /messages/{messageId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
        // Allow message owner, group owner, or moderators to delete messages
        allow delete: if isAuthenticated() && (
          resource.data.userId == request.auth.uid ||
          get(/databases/$(database)/documents/studyGroups/$(groupId)).data.ownerId == request.auth.uid ||
          exists(/databases/$(database)/documents/studyGroups/$(groupId)/members/$(request.auth.uid)) &&
          get(/databases/$(database)/documents/studyGroups/$(groupId)/members/$(request.auth.uid)).data.role == 'admin'
        );
      }

      // Study group posts subcollection
      match /posts/{postId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
        // Allow post owner, group owner, or moderators to delete posts
        allow delete: if isAuthenticated() && (
          resource.data.userId == request.auth.uid ||
          get(/databases/$(database)/documents/studyGroups/$(groupId)).data.ownerId == request.auth.uid ||
          exists(/databases/$(database)/documents/studyGroups/$(groupId)/members/$(request.auth.uid)) &&
          get(/databases/$(database)/documents/studyGroups/$(groupId)/members/$(request.auth.uid)).data.role == 'admin'
        );
      }
    }

    // Forum topics collection
    match /forumTopics/{topicId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Allow topic owner or any moderator to delete (add isModerator field to users or check admin role)
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Forum replies subcollection
      match /replies/{replyId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
        // Allow reply owner or topic owner to delete
        allow delete: if isAuthenticated() && (
          resource.data.userId == request.auth.uid ||
          get(/databases/$(database)/documents/forumTopics/$(topicId)).data.userId == request.auth.uid
        );
      }
    }
  }
}
